{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false, 
    "sourceMap": false,
    "outDir": "dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "downlevelIteration": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@chaoyueRender/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}
