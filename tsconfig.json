{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "paths": {
      "@chaoyueRender/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}
